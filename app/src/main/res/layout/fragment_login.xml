<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loginFragment"
    android:orientation="vertical"
    android:background="@color/my_white_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_margin="20dp"
        android:id="@+id/et_loginFragment_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/et_loginFragment_name_hint"
        android:textSize="30sp"
        android:textColorHint="@color/my_deepgray_color"
        android:textColor="@color/my_black_color"
        android:background="@drawable/my_textedit_bg"
        android:layout_above="@+id/et_loginFragment_password"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_margin="20dp"
        android:id="@+id/et_loginFragment_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:gravity="center"
        android:hint="@string/et_loginFragment_password_hint"
        android:textSize="30sp"
        android:textColorHint="@color/my_deepgray_color"
        android:textColor="@color/my_black_color"
        android:background="@drawable/my_textedit_bg"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/btn_loginFragment_login"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/btn_loginFragment_login_title"
        android:textSize="20sp"
        android:background="@drawable/my_button_radius"
        android:textColor="@color/my_white_color"
        android:layout_below="@+id/et_loginFragment_password"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_above="@+id/et_loginFragment_name"
        android:src="@mipmap/post_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp" />
</RelativeLayout>