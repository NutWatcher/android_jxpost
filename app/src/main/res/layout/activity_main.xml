<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/my_gray_color"
    tools:context=".MainActivity">



    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/textView">
        <TextView
            android:text="张三"
            android:textSize="30sp"
            android:textColor="@color/my_black_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_main_name" />
        <TextView
            android:text="金融业务局金融业务局"
            android:textSize="10sp"
            android:textColor="@color/my_deepgray_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_main_department" />
        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView">
            <TextView
                android:text="当前日平均"
                android:layout_gravity="right"
                android:textColor="@color/my_deepgray_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="100.55"
                android:layout_gravity="right"
                android:textColor="@color/my_deepgray_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_main_average_money" />
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView">
            <TextView
                android:text="预期余额"
                android:layout_gravity="right"
                android:textColor="@color/my_deepgray_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="100.55"
                android:layout_gravity="right"
                android:textColor="@color/my_deepgray_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_main_expect_money" />
        </LinearLayout>

        <LinearLayout
                android:layout_gravity="right"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView">
                <TextView
                    android:text="还需存入"
                    android:layout_gravity="right"
                    android:textColor="@color/my_deepgray_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="6546546.2"
                    android:layout_gravity="right"
                    android:textColor="@color/my_deepgray_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_main_need_money" />
        </LinearLayout>


    </LinearLayout>

    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gridView"
        android:background="@color/my_white_color"
        android:numColumns="auto_fit"
        android:columnWidth="90dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="1dp"
        android:horizontalSpacing="1dp"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
